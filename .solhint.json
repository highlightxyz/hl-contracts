{  
  "extends": "solhint:recommended", 
  "plugins": ["prettier"],  
  "rules": {  
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "0.8.10"],
    "func-visibility": ["warn", {"ignoreConstructors": true }],
    "no-empty-blocks": "off",
    "ordering": "warn",
    "private-vars-leading-underscore": "error",
    "func-name-mixedcase": "off"
  }  
}